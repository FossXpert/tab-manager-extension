{
  "manifest_version": 3,
  "name": "Navium",
  "version": "1.1",
  "description": "Manage your tabs like a boss",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/16-1.png",
      "32": "icons/32-1.png",
      "48": "icons/48-1.png",
      "128": "icons/128-1.png"
    }
  },
  "permissions": [
    "tabs",
    "activeTab",
    "sessions"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-tabbar": {
      "suggested_key": {
        "default": "Ctrl+Y",
        "mac": "Command+Y"
      },
      "description": "Open tab manager popup"
    }
  },
  "icons": {
    "16": "icons/16-1.png",
    "32": "icons/32-1.png",
    "48": "icons/48-1.png",
    "128": "icons/128-1.png"
  }
}
