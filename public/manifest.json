{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Manage your tabs like a boss",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": ["tabs", "activeTab", "scripting", "sessions"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-tabbar": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open tab manager popup"
    }
  }
}
